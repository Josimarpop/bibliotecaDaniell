
<%= form_for(@aluno, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @aluno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aluno.errors.count, "error") %> O aluno nao pode ser salvo:</h2>

      <ul>
        <% @aluno.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>
      <div class="control-group">
      <%= f.label :nome, t(:nome, :default => "nome").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :nome %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :matricula, t(:matricula, :default => "matricula").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.number_field :matricula %>
      </div>
    </div>
<!-- Beautiful_scaffold - AddField - Do not remove -->
  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>


