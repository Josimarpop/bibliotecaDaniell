<h2><%= t(:show, :default => "") %> <%= t(:aluno, :default => "Aluno") %></h2>

  <p>
    <b><%= t(:nome, :default => "Nome") %>:</b>
      <%= @aluno.nome %>
  </p>
  <p>
    <b><%= t(:matricula, :default => "Matricula") %>:</b>
      <%= @aluno.matricula %>
  </p>

<!-- Beautiful_scaffold - AddField - Field - Do not remove -->

<%= link_to t(:edit, :default => "Editar"), edit_aluno_path(@aluno), :class => "btn" %>
